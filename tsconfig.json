{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": ["ESNext", "DOM"],
        "baseUrl": ".",
        "paths": {
            "@/components/*": ["src/components/*"],
            "@/pages/*": ["src/pages/*"],
            "@/utils/*": ["src/utils/*"]
          },
    },
    "include": [
        ".vitepress/**/*.ts",
        ".vitepress/**/*.d.ts",
        ".vitepress/**/*.tsx",
        ".vitepress/**/*.vue",
        "src/**/*.vue",
        "src/**/*.ts",
    ],
    "exclude": ["dist", "node_modules"]
}