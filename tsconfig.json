{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": ["ESNext", "DOM"],
        "baseUrl": ".",
    },
    "include": [
        ".vitepress/**/*.ts",
        ".vitepress/**/*.d.ts",
        ".vitepress/**/*.tsx",
        ".vitepress/**/*.vue"
    ],
    "exclude": ["dist", "node_modules"]
}